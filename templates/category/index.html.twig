{% extends 'base.html.twig' %}

{% block title %}Categories List
{% endblock %}
{% block body %}


	<div class="container">
		<div class="row my-5">
			<div class="card p-4">
				<h1>Categories List</h1>
				{% include "layouts/flash_message.html.twig" %}
				<table class="table">
					<thead>
						<tr class="">
							<th scope="col">#</th>
							<th scope="col">Category Name</th>
							<th scope="col">Action</th>
						</tr>
					</thead>
					<tbody>
						{% for category in categories %}
							<tr>
								<th scope="row">{{category.id}}</th>
								<td class="align-middle">{{category.name}}</td>
								<td>
									<a href="{{path('app_category_update', {'id': category.id})}}" class="btn btn-outline-primary">Edit</a>
									<a href="{{path('app_category_delete', {'id': category.id})}}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this category?')">Delete</a>
								</td>
							</tr>
						{% else %}
							<p>No categories</p>
						{% endfor %}
					</tbody>
				</table>
			</div>
			{# <div class="border-top border-2 border-light"></div> #}
			<a href="{{path('app_category_add')}}" class="btn btn-dark mt-3 col-3">Add New Category</a>
		</div>

	</div>
{% endblock %}
