{% extends 'base.html.twig' %}

{% block title %}Update Category
{% endblock %}

{% block body %}
	<div class="container containerForm">
		<div class="card p-4 col-6">
			<h1>Update Category</h1>
			{{ form_errors(form) }}
			{{ form_start(form) }}
			{{ form_widget(form.name,{ 'attr': {'class': 'form form-control', "placeholder": "Category Name" } }) }}
			<button type="submit" class="btn btn-lg btn-dark">Update</button>
			{{ form_end(form) }}

		</div>
	</div>
{% endblock %}
