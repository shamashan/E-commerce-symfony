{% extends 'base.html.twig' %}

{% block title %}Hello HomePageController!
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Products</h1>
		<div class="row">
			{% for product in products %}

				<div class="col-md-4 my-2">
					<div class="card" style="width: 18rem;">
						<img src={{ asset("uploads/images/"~product.image)}} class="card-img-top imgProduct" alt="...">
						<div class="card-body">
							<h5 class="card-title">{{product.name}}</h5>
							<p class="card-text">{{product.description|slice(0.60)}}</p>
							<p class="card-text">{{product.price}}</p>
							<a href="" class="btn btn-outline-success">Add to cart</a>
						</div>
					</div>
				</div>

			{% endfor %}
		</div>

	</div>
{% endblock %}
